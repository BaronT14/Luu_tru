@model QL_KHACHSAN.Models.DICHVU

@{
    ViewBag.Title = "Thêm dịch vụ";
    Layout = "~/Views/Shared/QLKS_LayoutPage.cshtml";
}


<style>

    .form-select {
        font-size: var(--font-size);
    }

    .form-control {
        font-size: var(--font-size);
    }

    .control-label {
        font-size: calc(var(--font-size) - 3px);
        width: 100%
    }

    .btn1 {
        margin: 32px 0;
    }
</style>
<div class="container">
    <div class="grid">
        <h3 class="header-h3">Thêm dịch vụ</h3>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Dịch vụ</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="control-label col-md-2">Tên dịch vụ</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TENDV, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TENDV, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-2">Giá dịch vụ</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.GIADV, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                        @Html.ValidationMessageFor(model => model.GIADV, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Thêm" class="btn1 btn--primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>