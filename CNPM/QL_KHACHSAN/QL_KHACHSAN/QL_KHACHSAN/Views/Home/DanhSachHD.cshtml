@model IEnumerable<QL_KHACHSAN.Models.HOADON>

@{
    ViewBag.Title = "Danh sách hoá đơn";
    Layout = "~/Views/Shared/QLKS_LayoutPage.cshtml";
}

<div class="container">
    <div class="grid">
        <h3 class="header-h3">DANH SÁCH HOÁ ĐƠN</h3>
        <table class="table">
            <tr>
                <th>
                    Mã hoá đơn
                </th>
                <th>
                    Tên khách hàng
                </th>
                <th>
                    Ngày đặt
                </th>
                <th>
                    Tổng tiền
                </th>
                <th>
                   Tình trạng
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MAHD)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KHACHHANG.TENKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NGAYDAT)
                    </td>
                    <td>
                        @String.Format("{0:N0}", item.TONGTIEN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TINHTRANG)
                    </td>
                    <td>
                        @Html.ActionLink("Chi tiết", "ThanhToan", new { mahd = item.MAHD })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
