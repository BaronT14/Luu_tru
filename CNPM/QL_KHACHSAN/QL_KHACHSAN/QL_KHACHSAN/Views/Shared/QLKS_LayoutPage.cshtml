@using QL_KHACHSAN.Models
@{ 
    NHANVIEN user = Session["DN"] as NHANVIEN;
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khách sạn Hùng Long</title>
    <link rel="icon" type="image/png" href="~/assest/img/favicon.png">
    <link href="~/assest/font/fontawesome-free-6.6.0-web/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
    <link href="~/assest/css/assest.css" rel="stylesheet" />
    <link href="~/assest/css/grid.css" rel="stylesheet" type="text/css" />
    <link href="~/assest/css/base.css" rel="stylesheet" type="text/css" />
    <link href="~/assest/css/style.css" rel="stylesheet" type="text/css" />
</head><body>
    <style>
        .header__navbar-item:hover .user__list{
            display: block;
        }
        .user__list.more__list {
            left: 25px;
            min-width: 175px;
        }
        .user__list.more__list ul::after{
            display: none;
        }
    </style>
    <div class="header">
        <div class="grid wide">
            <div class="header__navbar">
                <ul class="header__navbar-list">
                    <li class="header__navbar-item">
                        <a href="#"><img src="~/assest/img/logo.png" alt=""></a>
                    </li>
                    <li class="header__navbar-item">
                        <a href="/Home/QL_DatPhong" class="header__navbar-item-link">Quản lý đặt phòng</a>
                        <div class="user__list more__list">
                            <ul>
                                <li class="user__list-item">
                                    <a href="/Home/DanhSachHD">Danh sách hoá đơn</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="header__navbar-item">
                        <a href="/Home/DanhSachPhong" class="header__navbar-item-link">Quản lý phòng</a>
                        <div class="user__list more__list">
                            <ul>
                                <li class="user__list-item">
                                    <a href="/Home/DanhSachLoaiPhong">Loại phòng</a>
                                </li>
                                <li class="user__list-item">
                                    <a href="/Home/DanhSachPhong">Danh sách phòng</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="header__navbar-item">
                        <a href="/Home/DanhSachDichVu" class="header__navbar-item-link">Quản lý dịch vụ</a>
                    </li>
                    <li class="header__navbar-item">
                        <a href="/Home/DanhSachNhanVien" class="header__navbar-item-link">Quản lý nhân viên</a>
                    </li>
                </ul>
                <ul class="header__navbar-list">
                    @if (Session["DN"] == null)
                    {
                        <li class="header__navbar-item bold"><a href="/Home/DangNhap" style="text-decoration: none; color: var(--text-color);">Đăng nhập</a></li>
                    }
                    @*<li class="header__navbar-item bold">Đăng ký</li>*@
                    else
                    {
                        <li class="header__navbar-item" style="cursor: default">
                            <i class="fa-regular fa-user"></i>
                            @QL_KHACHSAN.Models._base.GetLastName(user.TENNV)
                        </li>
                        <li class="header__navbar-item">
                            <div class="user__avt">
                                <img src="~/assest/img/avt-user.jpg" alt="">
                                <div class="user__list">
                                    <ul>
                                        <li class="user__list-item">
                                            <a href="">Thông tin cá nhân</a>
                                        </li>
                                        <li class="user__list-item">
                                            <a href="/Home/DangXuat">Đăng xuất</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>


    @RenderBody()


    <div class="footer">
        <div class="grid wide">
            <ul class="members">
                <img src="~/assest/img/logo.png" alt="">
                <li>Lăng Minh Hải</li>
                <li>Trần Trọng Quí</li>
                <li>Nguyễn Văn Thành</li>
                <li>Nguyễn Hoành Thịnh</li>
            </ul>
        </div>
    </div>
    <div id="toast"></div>
    <script src="~/assest/js/iii.js"></script>
</body>
</html>
