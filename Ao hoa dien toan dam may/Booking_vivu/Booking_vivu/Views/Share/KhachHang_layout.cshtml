<!DOCTYPE html>

<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Booking-vivu</title>
	<link href="~/assest/font/fontawesome-free-6.6.0-web/css/all.min.css" rel="stylesheet" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link href="~/assest/css/grid.css" rel="stylesheet" type="text/css" />
	<link href="~/assest/css/base.css" rel="stylesheet" type="text/css" />
	<link href="~/assest/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="header">
        <div class="grid wide">
            <div class="header__navbar">
                <ul class="header__navbar-list">
                    <li class="header__navbar-item">
                        <a href="/Home/TrangChu"><img src="~/assest/img/logo.jpg" alt=""></a>
                    </li>
                    <li class="header__navbar-item">
                        <a href="/Tour/HienThiTour" class="header__navbar-item-link">Tour du lịch</a>
                    </li>
                    <li class="header__navbar-item">
                        <a href="" class="header__navbar-item-link">Tìm khách sạn</a>
                    </li>
                </ul>
                <ul class="header__navbar-list">
                    <li class="header__navbar-item" style="cursor: default">
                        <i class="fa-solid fa-phone"></i>
                        0765084233
                    </li>
                    <li class="header__navbar-item">
                        <a href="/Home/TrangChu#contact" class="btn header__navbar-item-contact">Liên hệ ngay</a>
                    </li>
                    @{
                        if (ViewBag.s == 0)
                        {
                        <li class="header__navbar-item bold">Đăng nhập</li>
                        <li class="header__navbar-item bold">Đăng ký</li>
                        }
                        else {
                            <li class="header__navbar-item">
                                <div class="user__avt">
                                    <img src="~/assest/img/avt-user.jpg" alt="">
                                    <div class="user__list">
                                        <ul style="padding-left: 0;">
                                            <li class="user__list-item">
                                                @Html.ActionLink("Thông tin cá nhân", "thongTinCaNhan", "Home")
                                            </li>
                                            <li class="user__list-item">
                                                @Html.ActionLink("Đơn đặt", "ds_hoa_don", "Home")
                                            </li>
                                            <li class="user__list-item">
                                                @Html.ActionLink("Hoá đơn đã đặt", "thongTinCaNhan", "Home")
                                            </li>
                                            <li class="user__list-item">
                                                @Html.ActionLink("Đăng xuất", "Logout", "Home")
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <div class="footer">
        <div class="grid wide">
            <ul class="members">
                <img src="~/assest/img/logo.jpg" />
                <li>Lăng Minh Hải</li>
                <li>Trần Trọng Quí</li>
                <li>Nguyễn Văn Thành</li>
                <li>Nguyễn Hoành Thịnh</li>
            </ul>
        </div>
    </div>
</body>
</html>
